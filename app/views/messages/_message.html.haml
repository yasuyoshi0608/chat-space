.content
  .user-date
    .user-date__user-name
      = message.user.name
    .user-date__message-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message-talk
    - if message.content.present?
      %p.message-talk__content
        = message.content
    = image_tag message.image.url, class: 'message-talk__image' if message.image.present?